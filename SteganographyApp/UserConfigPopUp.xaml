<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SteganographyApp.UserConfigPopUp"
             Title="User Configuration">

    <ScrollView>
        <VerticalStackLayout Padding="1" Spacing="10"
                             HorizontalOptions="Center"
                             MaximumWidthRequest="500">

            <Label 
                Text="Password Generator Settings"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Frame BackgroundColor="#f0f0f0" CornerRadius="12" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="15">

                    <Label Text="Enter Size of Password:" FontSize="20"/>
                    <Entry x:Name="NumberEntry"
                           Keyboard="Numeric"
                           Placeholder="e.g. 16"
                           FontSize="18"
                           BackgroundColor="White"
                           HeightRequest="40"/>

                    <Label Text="Required Characters:" FontSize="20" Margin="0,10,0,0"/>

                    <HorizontalStackLayout Spacing="10">
                        <CheckBox x:Name="LowerCaseCheckBox" IsChecked="True" />
                        <Label Text="At least one lowercase letter" VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <CheckBox x:Name="UpperCaseCheckBox" IsChecked="True" />
                        <Label Text="At least one uppercase letter" VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <CheckBox x:Name="NumberCheckBox" IsChecked="True" />
                        <Label Text="At least one number" VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <CheckBox x:Name="SpecialCheckBox" IsChecked="True" />
                        <Label Text="At least one special character" VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <Button Text="Submit"
                            Clicked="OnSubmitClicked"
                            BackgroundColor="#007AFF"
                            TextColor="White"
                            FontSize="18"
                            CornerRadius="8"
                            HeightRequest="45"
                            Margin="0,20,0,0"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
