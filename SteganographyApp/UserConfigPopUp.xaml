<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SteganographyApp.UserConfigPopUp"
             Title="UserConfigPopUp">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label Text="Enter Size of Password:" FontSize="20"/>
        <Entry x:Name="NumberEntry"
               Keyboard="Numeric"
               Placeholder="e.g. 16"
               FontSize="18" />

        <Label Text="Check what characters are needed" FontSize="20"/>

        <HorizontalStackLayout Spacing="10">
            <CheckBox x:Name="LowerCaseCheckBox" IsChecked="True" />
            <Label Text="At least one lower case letter" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <HorizontalStackLayout Spacing="10">
            <CheckBox x:Name="UpperCaseCheckBox" IsChecked="True" />
            <Label Text="At least one upper case letter" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <HorizontalStackLayout Spacing="10">
            <CheckBox x:Name="NumberCheckBox" IsChecked="True" />
            <Label Text="At least one number" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <HorizontalStackLayout Spacing="10">
            <CheckBox x:Name="SpecialCheckBox" IsChecked="True" />
            <Label Text="At least one special character" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <Button Text="Submit" Clicked="OnSubmitClicked" />

    </VerticalStackLayout>
</ContentPage>
    
    