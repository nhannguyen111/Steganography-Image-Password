<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
     xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
     x:Class="SteganographyApp.OptionAPage"
     Title="Password to Image"
     BackgroundColor="#981E32">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25" HorizontalOptions="Center">

            <!-- Page Title -->
            <Label
                Text="Password to Image Preview"
                FontSize="28"
                FontAttributes="Bold"
                TextColor="#333"
                HorizontalOptions="Center" />

            <!-- Image Preview with Frame -->
            <Frame Padding="15"
                   CornerRadius="16"
                   HasShadow="True"
                   BackgroundColor="White"
                   HorizontalOptions="Center">

                <Image
                    x:Name="MyImageControl"
                    Source="select_an_image.png"
                    HeightRequest="250"
                    WidthRequest="250"
                    Aspect="AspectFit">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="UploadBtn_Clicked" />
                    </Image.GestureRecognizers>
                </Image>
            </Frame>

            <!-- Create Password Button -->
            <Button
                x:Name="CreatePassword"
                Text="Create Password"
                Clicked="CreatePassword_Clicked"
                BackgroundColor="#007AFF"
                TextColor="White"
                FontAttributes="Bold"
                FontSize="18"
                WidthRequest="320"
                CornerRadius="12"
                HeightRequest="50"
                HorizontalOptions="Center" />

            <!-- Password Display + Copy Button -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">

                <!-- Read-only password display -->
                <Entry
                    x:Name="UserPassword"
                    Placeholder="Your password will appear here"
                    IsReadOnly="True"
                    FontSize="16"
                    BackgroundColor="White"
                    TextColor="Black"
                    WidthRequest="260"
                    HeightRequest="50"
                    HorizontalOptions="Start"
                    VerticalOptions="Center" />

                <!-- Copy button -->
                <Button
                    Text="â§‰"
                    Clicked="CopyPassword_Clicked"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    FontSize="20"
                    CornerRadius="10"
                    VerticalOptions="Center"
                    HorizontalOptions="End" />
            </HorizontalStackLayout>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
