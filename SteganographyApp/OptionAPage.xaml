<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SteganographyApp.OptionAPage"
             Title="Steganography App"
             BackgroundColor="#f2f2f7">

    <ScrollView>
        <VerticalStackLayout Padding="0" Spacing="0">

            <!-- Header Section -->
            <Label
                Text="Get Password"
                FontSize="32"
                FontAttributes="Bold"
                TextColor="#333"
                HorizontalOptions="Center" />

            <!-- Image Card Section -->
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Image x:Name="MyImageControl"
                    Source="select_an_image.png"
                    HeightRequest="250"
                    WidthRequest="250"
                    Aspect="AspectFit">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="UploadBtn_Clicked" />
                    </Image.GestureRecognizers>
                </Image>
            </VerticalStackLayout>

            <!-- Display + Copy Button Row -->
            <HorizontalStackLayout Spacing="10" Padding="20" HorizontalOptions="Center">

                <!-- Read-only display box -->
                <Entry
                    x:Name="PasswordDisplay"
                    Text=""
                    IsReadOnly="True"
                    BackgroundColor="White"
                    FontSize="18"
                    TextColor="Black"
                    HeightRequest="50"
                    WidthRequest="200"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"/>

                <!-- Copy button -->
                <Button
                    x:Name="CopyPassword"
                    Text="â§‰"
                    Clicked="CopyPassword_Clicked"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    FontSize="20"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="10"
                    VerticalOptions="Center"
                    HorizontalOptions="End" />

            </HorizontalStackLayout>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
